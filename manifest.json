{
    "manifest_version": 3,
    "name": "Smart AdBlock",
    "version": "1.0",
    "description": "Block ads and stop unwanted tracking.",
    "background": {
	"service_worker": "js/background.js"
     },

    "permissions": [
	"contextMenus",
	"tabs",
	"storage"
    ],

    "action": {
	"default_popup": "popup.html"
    },

    "browser_action": {
	"default_icon": "img/icon.png"
    },

    "icons": {
	"16": "img/icon.png",
	"32": "img/icon.png",
	"48": "img/icon.png",
	"128":"img/icon.png"
    }
}
